{% extends 'base.html.twig' %}
{#appliquer css spécifique pour ce formulaire#}
{% form_theme serieForm 'view/formTheme/formTheme.html.twig'%}

{% block title %}
    {{ parent() }} | Add
{% endblock %}

{%  var ='<strong>titre<:>strong>' %}
    {{  var | raw }}
{% block body %}
